{
    "name": "kayo/c3po-discord",
    "description": "Discord bot",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Kayo Bruno",
            "email": "kayodw@gmail.com"
        }
    ],
    "require": {
        "php": "~8.1.0",
        "team-reflex/discord-php": "^7.0",
        "vlucas/phpdotenv": "^5.4",
        "php-di/php-di": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "prepend-autoloader": false,
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests --colors=always --testdox"
    }
}
